@page
@using BmsSurvey.Common.Interfaces
@using BmsSurvey.WebApp.Resources
@model BmsSurvey.WebApp.Areas.Identity.Pages.Account.Manage.PersonalDataModel
@{
    ViewData["Title"] = LayoutLocalizer.GetLocalizedHtmlString("PERSONAL_DATA");
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}
@inject ILocalizationService<LayoutResource> LayoutLocalizer

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>@LayoutLocalizer.GetLocalizedHtmlString("PERSONAL_DATA_INFO")</p>
        <p>
            <strong>@LayoutLocalizer.GetLocalizedHtmlString("PERSONAL_DATA_DELETEINFO")</strong>
        </p>
        <form asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-primary" type="submit">@LayoutLocalizer.GetLocalizedHtmlString("DOWNLOAD")</button>
        </form>
        <p>
            <a asp-page="DeletePersonalData" class="btn btn-primary">@LayoutLocalizer.GetLocalizedHtmlString("DELETE")</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}