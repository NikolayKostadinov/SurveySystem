@page
@using BmsSurvey.WebApp.Resources
@model BmsSurvey.WebApp.Areas.Identity.Pages.Account.Manage.Disable2FaModel
@{
    ViewData["Title"] = LayoutLocalizer.GetLocalizedHtmlString("DISABLE_2FA");
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}
@inject ILocalizationService<LayoutResource> LayoutLocalizer

<partial name="_StatusMessage" model="@Model.StatusMessage" />

<h2>@ViewData["Title"]</h2>

<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@LayoutLocalizer.GetLocalizedHtmlString("DISABLE_2FA_TEXT_HEADER")</strong>
    </p>
    <p>
        @LayoutLocalizer.GetLocalizedHtmlString("DISABLE_2FA_TEXT_DETAILS")
        <a asp-page="./ResetAuthenticator">@LayoutLocalizer.GetLocalizedHtmlString("DISABLE_2FA_TEXT_DETAILS_LINK")</a>
    </p>
</div>

<div>
    <form method="post" class="form-group">
        <button class="btn btn-danger" type="submit">@LayoutLocalizer.GetLocalizedHtmlString("DISABLE_2FA_BUTTON")</button>
    </form>
</div>
