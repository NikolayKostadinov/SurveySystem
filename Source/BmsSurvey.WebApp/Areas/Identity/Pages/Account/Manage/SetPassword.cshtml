@page
@model BmsSurvey.WebApp.Areas.Identity.Pages.Account.Manage.SetPasswordModel
@{
    ViewData["Title"] = LayoutLocalizer.GetLocalizedHtmlString("SET_PASSWORD");
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
@inject ILocalizationService<LayoutResource> LayoutLocalizer

<h4>@LayoutLocalizer.GetLocalizedHtmlString("SET_YOUR_PASSWORD")</h4>
<partial name="_StatusMessage"/>
<p class="text-info">
    @LayoutLocalizer.GetLocalizedHtmlString("SET_PASSWORD_TEXT")
</p>
<div class="row">
    <div class="col-md-6">
        <form id="set-password-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.NewPassword">@LayoutLocalizer.GetLocalizedHtmlString("PASSWORD")</label>
                <input asp-for="Input.NewPassword" class="form-control" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword">@LayoutLocalizer.GetLocalizedHtmlString("CONFIRM_PASSWORD")</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@LayoutLocalizer.GetLocalizedHtmlString("SET_PASSWORD")</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
