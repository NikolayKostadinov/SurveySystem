@page
@using BmsSurvey.Common.Interfaces
@using BmsSurvey.WebApp.Resources
@model BmsSurvey.WebApp.Areas.Identity.Pages.Account.Manage.ResetAuthenticatorModel
@{
    ViewData["Title"] = LayoutLocalizer.GetLocalizedHtmlString("RESET_AUTHENTICATOR_KEY");
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}
@inject ILocalizationService<LayoutResource> LayoutLocalizer

@Html.Partial("_StatusMessage", Model.StatusMessage)
<h4>@ViewData["Title"]</h4>
<div class="alert alert-warning" role="alert">
    <p>
        <span class="glyphicon glyphicon-warning-sign"></span>
        <strong>@LayoutLocalizer.GetLocalizedHtmlString("RESET_AUTHENTICATOR_INFO")</strong>
    </p>
    <p>
        @LayoutLocalizer.GetLocalizedHtmlString("RESET_AUTHENTICATOR_TEXT")
    </p>
</div>
<div>
    <form id="reset-authenticator-form" method="post" class="form-group">
        <button id="reset-authenticator-button" class="btn btn-danger" type="submit"> @LayoutLocalizer.GetLocalizedHtmlString("RESET_AUTHENTICATOR_KEY")</button>
    </form>
</div>