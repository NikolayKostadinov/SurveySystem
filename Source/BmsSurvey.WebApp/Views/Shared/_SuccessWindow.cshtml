@using BmsSurvey.Common.Interfaces
@using BmsSurvey.WebApp.Resources
@inject ILocalizationService<LayoutResource> LocalizationService
<div class='row row-err-window'>
    <div class='col-lg-1'>
        <img class="center-block" src='~/images/ok.png' width='64' height='64' alt='Error!' />
    </div>
    <div class='col-lg-9 error-message-wrapper vcenter'>
        <h2 class='text-success'>@LocalizationService.GetLocalizedHtmlString("SUCCESS")!!</h2>
        <pre id='succ-message'></pre>
    </div>
</div>
<hr />
<button class='center-block btn btn-default' onclick='kendoAdditional.CloseWindow("div#success-window")'>Затвори</button>
