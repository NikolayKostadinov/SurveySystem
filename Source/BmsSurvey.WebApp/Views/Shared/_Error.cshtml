@using System.Buffers.Text
@using System.Text
@using BmsSurvey.WebApp.Resources
@inject ILocalizationService<LayoutResource> LayoutLocalizer

@if (Context.Session.TryGetValue("Error", out var error))
{
    Context.Session.Remove("Error");
    <div class="container">
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <h4 class="alert-heading">@LayoutLocalizer.GetLocalizedHtmlString("ERROR")</h4>
            <hr>
            <p class="mb-0">@LayoutLocalizer.GetLocalizedHtmlString(UTF8Encoding.UTF8.GetString(error))</p>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}
