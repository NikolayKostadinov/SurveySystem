@inject ILocalizationService<LayoutResource> LayoutLocalizer
@model BmsSurvey.Application.Surveys.Models.SurveyViewModel
<nav aria-label="Page navigation">
    <ul class="pagination ">
        <li class="page-item @if (Model.PageNumber == 1)
                             {
                                 @:disabled
                             }">
            <a class="page-link" asp-action="Index" asp-route-id="@Model.Id"
               asp-route-pagenum="@(Model.PageNumber - 1)"
               aria-label="Previous">
                <i class="fas fa-chevron-left"></i>
                @LayoutLocalizer.GetLocalizedHtmlString("PREVIOUSPAGE")
            </a>
        </li>
        <li class="page-item @if (Model.IsLastPage)
                             {
                                 @:disabled
                             }">
            <a class="page-link" asp-action="Index" asp-route-id="@Model.Id"
               asp-route-pagenum="@(Model.PageNumber + 1)"
               aria-label="Next">
                @LayoutLocalizer.GetLocalizedHtmlString("NEXTPAGE")
                <i class="fas fa-chevron-right"></i>
            </a>
        </li>
    </ul>
</nav>